# ====================================
# WALLET PROVIDER CONFIGURATION
# ====================================
# Choose your wallet provider: 'para' or 'rainbow'
# If not set, defaults to Para
NEXT_PUBLIC_WALLET_PROVIDER=para

# ====================================
# PARA WALLET CONFIGURATION
# ====================================
# REQUIRED if NEXT_PUBLIC_WALLET_PROVIDER=para (or not set)
# Get your Para API key from https://getpara.com/
# If using NEXT_PUBLIC_WALLET_PROVIDER=rainbow, these are not needed
NEXT_PUBLIC_PARA_KEY=your_para_key_here

# OPTIONAL: Reown Project ID for Para's WalletConnect integration
# Get yours at https://cloud.reown.com/
NEXT_PUBLIC_REOWN_PROJECT=your_reown_project_id_here

# ====================================
# NETWORK CONFIGURATION
# ====================================
# Set to true for Moksha testnet, false or unset for mainnet
NEXT_PUBLIC_MOKSHA=true

# ====================================
# PERSONAL SERVER CONFIGURATION
# ====================================
NEXT_PUBLIC_PERSONAL_SERVER_BASE_URL=https://test.server.vana.com/api/v1

# Data Wallet Grantee
NEXT_PUBLIC_DATA_WALLET_APP_ADDRESS=0xB7300F04dfC902FEfa3068dBbeB27273bDe20F76
NEXT_PUBLIC_DEFAULT_GRANTEE_ID=5
NEXT_PUBLIC_DEFAULT_GRANT_URL=vibes.vana.com

# Backend Environment Variables (for API routes)
RELAYER_PRIVATE_KEY=your-relayer-wallet-private-key

# Google Drive Integration (Client-side only with @react-oauth/google)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-drive-client-id