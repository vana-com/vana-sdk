# Vana Load Test Configuration

# Test Scale Parameters
LOAD_TEST_TOTAL_USERS=12500
LOAD_TEST_MAX_CONCURRENT=1000
LOAD_TEST_DURATION_MINUTES=180

# Load Pattern Parameters  
LOAD_TEST_RAMP_UP_MINUTES=30
LOAD_TEST_SUSTAIN_MINUTES=120
LOAD_TEST_RAMP_DOWN_MINUTES=30

# System Parameters
LOAD_TEST_MAX_WALLETS=15000
LOAD_TEST_RPC_ENDPOINT=https://rpc.moksha.vana.org
LOAD_TEST_WALLET_FUNDING_AMOUNT=0.1

# Debugging Parameters
LOAD_TEST_ENABLE_DEBUG=false
LOAD_TEST_METRICS_INTERVAL=30
LOAD_TEST_FAIL_FAST=false

# Required Secrets
TEST_WALLET_PRIVATE_KEY=0x...
NEXT_PUBLIC_DATA_WALLET_APP_ADDRESS=...
NEXT_PUBLIC_DEFAULT_GRANTEE_ID=...

# Real System Configuration (PRODUCTION LOAD TESTING)
# Personal Server URL - Connect to real Vana infrastructure  
NEXT_PUBLIC_PERSONAL_SERVER_BASE_URL=https://test.server.vana.com/api/v1

# Relayer Configuration - For gasless transactions AND automatic wallet funding
# This wallet will fund test wallets with 0.1 VANA each (ensure it has sufficient balance)
RELAYER_PRIVATE_KEY=your-relayer-wallet-private-key

# Google Cloud Storage Configuration (PREFERRED - server-side)
# Get service account JSON from Google Cloud Console -> IAM & Admin -> Service Accounts
GOOGLE_CLOUD_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project-id",...}
GOOGLE_CLOUD_STORAGE_BUCKET=your-bucket-name

# Pinata IPFS Storage Configuration (ALTERNATIVE)
PINATA_JWT=eyJ...
PINATA_GATEWAY=https://gateway.pinata.cloud

# Optional: Multiple RPC endpoints for load distribution
LOAD_TEST_RPC_ENDPOINTS=https://rpc.moksha.vana.org,https://rpc2.moksha.vana.org
