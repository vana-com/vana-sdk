{
  "name": "vana-sdk-monorepo",
  "private": true,
  "type": "module",
  "version": "1.0.10",
  "description": "Vana SDK monorepo with examples",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:sdk": "turbo run build --filter='vana-sdk'",
    "build:demo": "turbo run build --filter='vana-sdk-demo'",
    "dev": "turbo run dev",
    "dev:demo": "turbo run dev --filter='vana-sdk-demo'",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "fetch-abis": "turbo run fetch-abis --filter='vana-sdk'",
    "clean": "turbo run clean",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "turbo": "^2.5.2"
  },
  "packageManager": "npm@10.9.2",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vana-com/vana-sdk.git"
  }
}
