{
  "name": "@opendatalabs/vana-sdk",
  "version": "0.1.0",
  "description": "A TypeScript library for interacting with Vana Network smart contracts.",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.node.js",
  "types": "dist/index.node.d.ts",
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/index.browser.d.ts",
        "import": "./dist/index.browser.js"
      },
      "types": "./dist/index.node.d.ts",
      "import": "./dist/index.node.js",
      "require": "./dist/index.node.cjs"
    },
    "./browser": {
      "types": "./dist/index.browser.d.ts",
      "import": "./dist/index.browser.js"
    },
    "./node": {
      "types": "./dist/index.node.d.ts",
      "import": "./dist/index.node.js",
      "require": "./dist/index.node.cjs"
    },
    "./chains": {
      "browser": {
        "types": "./dist/chains.browser.d.ts",
        "import": "./dist/chains.browser.js"
      },
      "node": {
        "types": "./dist/chains.node.d.ts",
        "import": "./dist/chains.node.js",
        "require": "./dist/chains.node.cjs"
      },
      "default": {
        "types": "./dist/chains.node.d.ts",
        "import": "./dist/chains.node.js",
        "require": "./dist/chains.node.cjs"
      }
    },
    "./platform": {
      "browser": {
        "types": "./dist/platform.browser.d.ts",
        "import": "./dist/platform.browser.js"
      },
      "node": {
        "types": "./dist/platform.node.d.ts",
        "import": "./dist/platform.node.js",
        "require": "./dist/platform.node.cjs"
      },
      "default": {
        "types": "./dist/platform.node.d.ts",
        "import": "./dist/platform.node.js",
        "require": "./dist/platform.node.cjs"
      }
    },
    "./*": {
      "browser": {
        "types": "./dist/*.d.ts",
        "import": "./dist/*.js"
      },
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    }
  },
  "browser": {
    "secp256k1": false,
    "crypto": false
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf dist .tsbuildinfo",
    "validate:platform": "tsx scripts/validate-platform-separation.ts",
    "validate:entries": "tsx scripts/validate-entry-points.ts",
    "prebuild": "npm run generate:types:check && npm run validate:platform && npm run validate:entries && npm run validate:types",
    "build:types": "tsc -p tsconfig.build.json --listEmittedFiles",
    "build:node": "tsup --config tsup.config.ts",
    "build:browser": "tsup --config tsup-browser.config.ts",
    "build": "npm run clean && npm run build:types && npm run build:node && npm run build:browser",
    "dev": "npm run build -- --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -p tsconfig.json",
    "validate:types": "rimraf test-dist && tsc -p tsconfig.build.json --outDir test-dist && test -f test-dist/index.node.d.ts && test -f test-dist/index.browser.d.ts && echo '✅ Type declarations can be generated' && rimraf test-dist || (echo '❌ Failed to generate type declarations' && rimraf test-dist && exit 1)",
    "test": "vitest",
    "test:verbose": "vitest --reporter=verbose",
    "test:coverage": "vitest run --coverage",
    "test:coverage:verbose": "vitest run --coverage --reporter=verbose --coverage.reporter=text",
    "discover-addresses": "tsx scripts/discover-addresses.ts",
    "fetch-abis": "tsx scripts/fetch-abis.ts",
    "generate:types": "tsx scripts/generate-types.ts",
    "generate:types:check": "tsx scripts/generate-types.ts --check",
    "generate": "npm run generate:mainnet",
    "generate:mainnet": "npm run discover-addresses && npm run fetch-abis mainnet && npm run generate:types && npm run codegen:subgraph:mainnet && npm run fetch-server-types mainnet",
    "generate:moksha": "npm run discover-addresses && npm run fetch-abis moksha && npm run generate:types && npm run codegen:subgraph:moksha && npm run fetch-server-types moksha",
    "fetch-server-types": "tsx scripts/fetch-server-types.ts",
    "codegen:subgraph": "graphql-codegen --config codegen.ts",
    "codegen:subgraph:moksha": "VANA_CODEGEN_NETWORK=moksha graphql-codegen --config codegen.ts",
    "codegen:subgraph:mainnet": "VANA_CODEGEN_NETWORK=mainnet graphql-codegen --config codegen.ts"
  },
  "keywords": [
    "vana",
    "blockchain",
    "web3",
    "sdk"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@noble/hashes": "^1.8.0",
    "@noble/secp256k1": "^2.3.0",
    "abitype": "^1.0.9",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eccrypto-js": "^5.4.0",
    "graphql": "^16.11.0",
    "openpgp": "^6.1.1",
    "uuid": "^13.0.0",
    "viem": "^2.35.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typed-document-node": "^5.1.2",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@types/node": "^24.3.0",
    "@types/secp256k1": "^4.0.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^3.2.4",
    "bundle-require": "^5.1.0",
    "consola": "^3.4.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "fix-dts-default-cjs-exports": "^1.0.1",
    "globals": "^16.3.0",
    "openapi-typescript": "^7.8.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tree-kill": "^1.2.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "secp256k1": "^5.0.1"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vana-com/vana-sdk.git",
    "directory": "packages/vana-sdk"
  }
}
