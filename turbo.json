{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", ".tsbuildinfo"],
      "env": [
        "RELAYER_PRIVATE_KEY",
        "CHAIN_RPC_URL",
        "CHAIN_ID",
        "PINATA_GATEWAY_URL",
        "PINATA_JWT",
        "APPLICATION_PRIVATE_KEY",
        "REPLICATE_API_TOKEN"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "typecheck": {
      "outputs": [".tsbuildinfo"]
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "outputs": ["coverage/**"]
    },
    "fetch-abis": {
      "outputs": ["src/abi/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
